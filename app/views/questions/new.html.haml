.row
  %h2 New Question

  .row
    .col-md-8
      = form_for [@quiz, @question] do |form|
        = render :partial => "form", :locals => { :form => form }
        = form.fields_for :answers, 4.times { form.object.answers.build } do |af|
          .row
            .form-group.col-sm-9
              = af.label :content, "Answer"
              = af.text_field :content, class: "form-control"
            .form-group.col-sm-3.correct_checkbox
              = af.label :correct, "Correct?"
              = af.check_box :correct


        .form-group
          = form.button "Create", type: "submit", class: "btn btn-primary"
