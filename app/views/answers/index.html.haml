.row
  %h2 Answers

.row
  .col-md-8
    %table.table
      %thead
        %tr
          %th Question ID
          %th Question Content
          %th Answer
          %th Correct?
          %th
          %th

      %tbody
        - @question.answers.each do |answer|
          %tr
            %td
              = link_to "#{answer.question_id}", quiz_question_path(@quiz, @question)
            %td
              = link_to "#{answer.question.content}", quiz_question_path(@quiz, @question)
            %td
              = link_to "#{answer.content}", quiz_question_answer_path(@quiz, @question, answer)
            %td
              = answer.correct? ? "Yes" : "No"
            %td
              = link_to "Edit", edit_quiz_question_answer_path(@quiz, @question, answer), class: "btn btn-default"
              = link_to "Delete", quiz_question_answer_path(@quiz, @question, answer), method: :delete, class: "btn btn-danger"

.row
  %p= link_to "New answer", new_quiz_question_answer_path(@quiz, @question), class: "btn btn-primary"
